{
    "name": "litvinjuan/ethereum-validator",
    "description": "PHP implementation to validate ethereum addresses",
    "type": "library",
    "homepage": "https://github.com/litvinjuan/ethereum-validator",
    "license": "MIT",
    "authors": [
        {
            "name": "Juan Litvin",
            "email": "litvinjuan@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "greensea/keccak": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "friendsofphp/php-cs-fixer": "^2.16",
        "brainmaestro/composer-git-hooks": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "litvinjuan\\EthereumValidator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "litvinjuan\\EthereumValidator\\Test\\": "tests"
        }
    },
    "scripts": {
        "cghooks": "vendor/bin/cghooks",
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update",
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix .",
        "cs-check": "php-cs-fixer fix --dry-run ."
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer cs-fix"
            ],
            "commit-msg": "grep -q '[A-Z]+-[0-9]+,.*' $1",
            "pre-push": [
                "composer cs-check",
                "composer test"
            ],
            "post-merge": "composer install"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
